def metricNames(ak,appId)
  parseUrl=URI.parse('https://api.newrelic.com/v2/applications/'+appId+'/metrics.json')
  uri='https://api.newrelic.com/v2/applications/'+appId+'/metrics.json'
  host=parseUrl.host
  path=parseUrl.path
  getRequest(ak,uri,host,path)
end
